{
  "name": "kaizen/monorepo",
  "description": "Kaizen Monorepo (development root)",
  "type": "project",
  "require": {
    "php": "^7.4 || ^8.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.7",
    "symplify/monorepo-builder": "^9.0"
  },
  "scripts": {
    "test": "phpunit",
    "analyse": "phpstan analyse packages --level=max",
    "cs-check": "phpcs --standard=PSR12 packages/",
    "cs-fix": "phpcbf --standard=PSR12 packages/",
    "build": "vendor/bin/monorepo-builder merge"
  }
}
